<UserControl x:Class="AcademicSavingService.View.SavingAccountsManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcademicSavingService.View"
             xmlns:ctrl="clr-namespace:AcademicSavingService.Controls"
			 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
	<Grid Margin="10">
		<Grid.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary Source="../Resources/CRUDStyle.xaml"/>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Grid.Resources>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="65*"/>
			<ColumnDefinition Width="25*" MaxWidth="350" MinWidth="150"/>
		</Grid.ColumnDefinitions>

		<!-- Saving account parts -->
		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="70*"/>
				<RowDefinition Height="30*" MaxHeight="220" MinHeight="200"/>
			</Grid.RowDefinitions>

			<!-- Customer Data grid-->
			<ctrl:AssDataGrid Margin="0, 0, 0, 20" 
							  ItemsSource="{Binding SavingAccounts}" 
							  EnableFullTextSearch="True" 
							  DataGridName="SAVING ACCOUNTS"
							  SelectedItem="{Binding SelectedAccount,  Mode=TwoWay}"
							  SelectedIndex="{Binding SelectedAccountIndex}">
				<ctrl:AssDataGrid.Columns>
								<DataGridTextColumn Width="50" Header="ID" Binding="{Binding MaSo}"/>
								<DataGridTextColumn Width="100" Header="Owner ID" Binding="{Binding MaKH}"/>
								<DataGridTextColumn Width="120" Header="Create date" Binding="{Binding NgayTao, StringFormat='d/M/yyyy'}" TextBlock.TextAlignment="Center"/>
								<DataGridTextColumn Width="120" Header="Close date" Binding="{Binding NgayDongSo, StringFormat='d/M/yyyy'}"/>
								<DataGridTextColumn Width="120" Header="Last update" Binding="{Binding LanCapNhatCuoi, StringFormat='dd/MM/yyyy'}"/>
								<DataGridTextColumn Width="80" Header="Period" Binding="{Binding KyHan}"/>
								<DataGridTextColumn Width="140" Header="Interest Rate" Binding="{Binding LaiSuat, StringFormat='{}{0}%'}"/>
								<DataGridTextColumn Width="*" Header="Balance" Binding="{Binding SoDu}"/>
				</ctrl:AssDataGrid.Columns>
			</ctrl:AssDataGrid>

			<Border CornerRadius="5" Grid.Row="1"
					Background="{DynamicResource MahApps.Brushes.AccentBase}">
				<Grid Margin="{StaticResource PaddingWidth}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="20*" MinWidth="50" MaxWidth="120"/>
						<ColumnDefinition Width="80*"/>
					</Grid.ColumnDefinitions>

					<Grid Grid.Column="0">
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Grid.Resources>
							<Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
								<Setter Property="Margin" Value="0, 3, 0, 3"/>
								<Setter Property="FontSize" Value="16"/>
								<Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.AccentBase}"/>
								<Setter Property="FontFamily" Value="{StaticResource MahApps.Fonts.Family.Button}"/>
								<Setter Property="FontWeight" Value="Bold"/>
							</Style>
						</Grid.Resources>
						<Button Grid.Row="0" Margin="0, 2, 0, 2" Command="{Binding CreateAccountCommand}" Content="ADD"/>
						<Button Grid.Row="1" Margin="0, 2, 0, 2" Command="{Binding DeleteAccountCommand}" Content="REMOVE"/>
						<Button Grid.Row="2" Margin="0, 2, 0, 2" Command="{Binding UpdateOneCommand}" Content="UPDATE"/>
						<Button Grid.Row="3" Margin="0, 2, 0, 2" Command="{Binding UpdateAllCommand}" Content="UPDATE ALL"/>
					</Grid>

					<Grid Grid.Column="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="60*" MaxWidth="950" MinWidth="400"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid Grid.Column="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="130"/>
								<ColumnDefinition Width="80*"/>
								<ColumnDefinition Width="130"/>
								<ColumnDefinition Width="80*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							
							<TextBlock Text="ID"			Grid.Column="0" Grid.Row="0"/>
							<TextBlock Text="Owner ID"		Grid.Column="0" Grid.Row="1"/>
							<TextBlock Text="Close date"	Grid.Column="0" Grid.Row="2"/>
							<TextBlock Text="Update date"	Grid.Column="0" Grid.Row="3"/>
							<TextBlock Text="Create date"	Grid.Column="2" Grid.Row="0"/>
							<TextBlock Text="Term"		Grid.Column="2" Grid.Row="1"/>
							<TextBlock Text="Balance"		Grid.Column="2" Grid.Row="2"/>
							<TextBlock Text="Initial Balance" Grid.Column="2" Grid.Row="3"/>

							<TextBox	Grid.Column="1" Grid.Row="0" Width="180" IsReadOnly="True" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="ID number" Text="{Binding ID}"/>
							<TextBox	Grid.Column="1" Grid.Row="1" Width="180" IsReadOnly="True" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Owner ID" Text="{Binding CustomerID}"/>
							<TextBox	Grid.Column="1" Grid.Row="2" Width="180" IsReadOnly="True" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Close date" Text="{Binding CloseDate, StringFormat='dd/MM/yyyy'}"/>
							<TextBox	Grid.Column="1" Grid.Row="3" Width="180" IsReadOnly="True" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Update date" Text="{Binding LastUpdateDate, StringFormat='dd/MM/yyyy'}"/>
							<DatePicker Grid.Column="3" Grid.Row="0" Width="180" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Create date" SelectedDate="{Binding CreateDate, UpdateSourceTrigger=PropertyChanged}"/>
							<StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
								<ComboBox Width="90" Grid.Column="0" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Term" ItemsSource="{Binding TermsList}" SelectedIndex="{Binding SelectedTermIndex}">
									<ComboBox.Resources>
										<Style TargetType="{x:Type TextBlock}">
											<Setter Property="Foreground" Value="{StaticResource MahApps.Brushes.Text}"/>
											<Setter Property="FontWeight" Value="Light"/>
											<Setter Property="FontFamily" Value="{StaticResource MahApps.Fonts.Family.Button}"/>
										</Style>
									</ComboBox.Resources>
								</ComboBox>
								<TextBox Width="90" Grid.Column="2" IsReadOnly="True" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Rate" Text="{Binding InterestRate, StringFormat='{}{0}%'}"/>
							</StackPanel>
							<ctrl:DigitTextBox	Grid.Column="3" Grid.Row="2" Width="240" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Balance" mah:TextBoxHelper.ClearTextButton="True" Text="{Binding Balance, FallbackValue=0}"/>
							<ctrl:DigitTextBox	Grid.Column="3" Grid.Row="3" Width="240" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Initial Balance" mah:TextBoxHelper.ClearTextButton="True" Text="{Binding InitialBalance, FallbackValue=0}"/>
						</Grid>
					</Grid>						 
				</Grid>
			</Border>
		</Grid>

		<!-- Customer parts -->
		<ctrl:AssDataGrid Grid.Column="1" Margin="20, 0, 0, 0" 
						  EnableFullTextSearch="True" 
						  DataGridName="CUSTOMERS" 
						  ItemsSource="{Binding Customers}"
						  SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">
			<ctrl:AssDataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding MaKH}"/>
				<DataGridTextColumn Header="Identity Num" Binding="{Binding CMND}"/>
				<DataGridTextColumn Header="Full Name" Width="*" Binding="{Binding HoTen}"/>
			</ctrl:AssDataGrid.Columns>
		</ctrl:AssDataGrid>
	</Grid>
</UserControl>
